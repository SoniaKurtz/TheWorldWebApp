<!DOCTYPE html>
<html>
<head>
    <title>The World @ViewBag.Title</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="sidebar">
        <img src="~/img/1926852_10203654910919828_1138406362_n.jpg" alt="headshot" class="headshot" />
        <span id="username">Sonia Kurtz</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>
    <div id="wrapper">
        <div id="main">
            <div>
                <button id="menuToggle">Toggle Menu</button>
            </div>
            @RenderBody()
        </div>
        <div id="footer">
            &copy; 2017 The World Ltd.
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("scripts", false)

    <script src="~/js/site.js"></script>
</body>
</html>
